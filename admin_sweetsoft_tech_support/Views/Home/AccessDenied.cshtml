<div class="d-flex justify-content-center align-items-center w-100 bg-light">
    <div class="text-center">
        <!-- Hình ảnh minh họa lỗi -->
        <img src="~/assets/images/blog/bug.jpg" alt="Error" class="img-fluid" style="max-width: 300px;">

        <!-- Thông báo lỗi -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger mt-4">
                <strong>Oops! Có lỗi xảy ra:</strong>
                @TempData["ErrorMessage"]
            </div>
        }   

        <!-- Các nút hỗ trợ người dùng -->
        <div class="mt-4">
            <button class="btn btn-outline-dark" onclick="window.history.back()">Quay lại</button>
            <a href="/" class="btn btn-primary ml-2">Về trang đăng nhập</a>
        </div>

        <div class="mt-3">
            <p>Hoặc bạn có thể <a asp-action="Logout" asp-controller="Admin">Xin cấp quyền</a> nếu cần.</p>
        </div>
    </div>
</div>
