@model admin_sweetsoft_tech_support.Models.TblCustomer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f4f7fc;
        margin: 0;
        padding: 0;
    }

    .container-custom {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 28px;
        color: #333;
        font-weight: 600;
        margin-bottom: 20px;
        text-align: center;
    }

    .section-header {
        background-color: #6a1b9a;
        color: #fff;
        padding: 12px;
        text-align: center;
        border-radius: 10px;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: 600;
            color: #555;
        }

    .form-control {
        border-radius: 8px;
        padding: 12px;
        font-size: 16px;
        border: 1px solid #ccc;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #6a1b9a;
            box-shadow: 0 0 5px rgba(106, 27, 154, 0.5);
        }

    .btn-back {
        background-color: #e0e0e0;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        color: #333;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        margin-bottom: 20px;
        transition: background-color 0.3s;
    }

        .btn-back:hover {
            background-color: #bdbdbd;
        }

    .btn-submit {
        background-color: mediumseagreen;
        color: white;
        padding: 12px 20px;
        border-radius: 8px;
        border: none;
        font-size: 16px;
        width: 100%;
        transition: background-color 0.3s;
    }

        .btn-submit:hover {
            background-color: #399361;
            color: black;
        }

    .form-group span {
        font-size: 12px;
        color: #d32f2f;
    }

    .form-group select,
    .form-group input[type="password"] {
        appearance: none;
        -webkit-appearance: none;
        -moz-appearance: none;
    }

    .form-group select {
        padding: 12px;
        border-radius: 8px;
        font-size: 16px;
        width: 100%;
        background-color: #f5f5f5;
        border: 1px solid #ddd;
    }

        .form-group select:focus {
            border-color: #6a1b9a;
            box-shadow: 0 0 5px rgba(106, 27, 154, 0.5);
        }

    .d-flex {
        display: flex;
        justify-content: flex-end;
    }
</style>

<div class="container w-100 d-flex justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
        <div class="container-custom">
            <div class="section-header">
                <h1 class="text-white">Thêm khách hàng</h1>
            </div>
            <form asp-action="Create">
                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-back">
                        <i class="ti ti-arrow-left"></i>
                        Quay lại
                    </a>
                </div>


                <!-- Các trường nhập liệu cho khách hàng -->
                <div class="form-group">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TaxCode" class="control-label"></label>
                    <input asp-for="TaxCode" class="form-control" />
                    <span asp-validation-for="TaxCode" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Company" class="control-label"></label>
                    <input asp-for="Company" class="form-control" />
                    <span asp-validation-for="Company" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Product" class="control-label"></label>
                    <input asp-for="Product" class="form-control" />
                    <span asp-validation-for="Product" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Status" class="control-label">Trạng thái</label>
                    <select asp-for="Status" class="form-control">
                        <option value="1">Hoạt động</option>
                        <option value="0">Chưa hoạt động</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ResetToken" class="control-label"></label>
                    <input asp-for="ResetToken" class="form-control" />
                    <span asp-validation-for="ResetToken" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ResetTokenExpiry" class="control-label"></label>
                    <input asp-for="ResetTokenExpiry" class="form-control" />
                    <span asp-validation-for="ResetTokenExpiry" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Token" class="control-label"></label>
                    <input asp-for="Token" class="form-control" />
                    <span asp-validation-for="Token" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TokenExpiry" class="control-label"></label>
                    <input asp-for="TokenExpiry" class="form-control" />
                    <span asp-validation-for="TokenExpiry" class="text-danger"></span>
                </div>

                <!-- Dropdown cho Người tạo và Người cập nhật -->
                <div class="form-group">
                    <label asp-for="CreatedUser" class="control-label"></label>
                    <select asp-for="CreatedUser" class="form-control" asp-items="ViewBag.CreatedUser"></select>
                </div>

                <div class="form-group">
                    <label asp-for="CreatedAt" class="control-label"></label>
                    <input asp-for="CreatedAt" class="form-control" />
                    <span asp-validation-for="CreatedAt" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="UpdatedUser" class="control-label"></label>
                    <select asp-for="UpdatedUser" class="form-control" asp-items="ViewBag.UpdatedUser"></select>
                </div>

                <div class="form-group">
                    <label asp-for="UpdatedAt" class="control-label"></label>
                    <input asp-for="UpdatedAt" class="form-control" />
                    <span asp-validation-for="UpdatedAt" class="text-danger"></span>
                </div>

                <!-- Nút tạo khách hàng -->
                <div class="form-group">
                    <input type="submit" value="Create" class="btn-submit" />
                </div>

                <!-- Quay lại danh sách khách hàng -->
                <div>
                    <a asp-action="Index" class="btn-back">Back to List</a>
                </div>
            </form>
        </div>
    </div>
