@model admin_sweetsoft_tech_support.Models.TblSupportRequest

@{
    ViewData["Title"] = "Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<h1 class="text-center my-4" style="color: #6a1b9a;">Chi tiết Yêu cầu hỗ trợ</h1>

<div class="container">
    <div class="row">
        <div class="col-12 col-md-8 offset-md-2">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-warning">
                    <p><i class="bi bi-info-circle"></i> Thông tin yêu cầu hỗ trợ</p>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <div class="list-group-item bg-light border-0">
                            <strong>Chi tiết yêu cầu:</strong>
                            <p>@Html.DisplayFor(model => model.RequestDetails)</p>
                        </div>
                        <div class="list-group-item bg-light border-0">
                            <strong>Trạng thái:</strong>
                            <p>
                                @{
                                    string statusText = Model.Status switch
                                    {
                                        0 => "Chưa hoàn thành",
                                        1 => "Hoàn thành",
                                        2 => "Không xử lý được",
                                        _ => "Không xác định"
                                    };
                                }
                                @statusText
                            </p>
                        </div>
                        <div class="list-group-item bg-light border-0">
                            <strong>Khách hàng:</strong>
                            <p>@ViewBag.CustomerName</p>
                        </div>
                        <div class="list-group-item bg-light border-0">
                            <strong>Phòng ban:</strong>
                            <p>@ViewBag.DepartmentName</p>
                        </div>
                        <div class="list-group-item bg-light border-0">
                            <strong>Ngày tạo:</strong>
                            <p>@Model.CreatedAt.ToString("dd/MM/yyyy")</p>
                        </div>
                        <div class="list-group-item bg-light border-0">
                            <strong>Ngày giải quyết:</strong>
                            <p>@(Model.ResolvedAt?.ToString("dd/MM/yyyy") ?? "Chưa giải quyết")</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Edit" asp-route-id="@Model.RequestId" class="btn btn-warning text-dark">
                        <i class="bi bi-pencil-square"></i> Sửa
                    </a>
                    <a asp-action="Index" class="btn btn-outline-dark">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Styles -->
<style>
    h1 {
        font-family: 'Poppins', sans-serif;
        font-weight: bold;
        color: #6a1b9a;
    }

    .list-group-item {
        border: none;
        padding: 10px;
        background-color: #f4f6f9;
        margin-bottom: 10px;
    }

    .list-group-item strong {
        color: #6a1b9a;
    }

    .card-header {
        font-size: 1.25rem;
        background-color: #6a1b9a;
        color: #333 !important;
        border-radius: 0.5rem;
    }

    .btn-warning {
        background-color: #ffc107;
        color: #6a1b9a;
    }

    .btn-warning:hover {
        background-color: #e0a800;
        color: #fff;
    }

    .card-footer {
        background-color: #fff;
        border-top: 1px solid #ddd;
        padding-top: 15px;
    }
</style>
