@model admin_sweetsoft_tech_support.Models.TblSupportRequest

@{
    ViewData["Title"] = "Create";
}
<style>
    h1 {
        font-family: 'Poppins', sans-serif;
        font-weight: bold;
        color: #6a1b9a;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .card-header {
        background-color: #7b2cbf;
        color: #333;
    }

    .form-control {
        border-radius: 5px;
        padding: 10px;
    }

    .btn-warning {
        background-color: #f9a825;
        color: white;
        border-radius: 5px;
    }

        .btn-warning:hover {
            background-color: #f57f17;
        }

    .text-center {
        margin-top: 20px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-12 col-md-8 offset-md-2">
            <div class="card border-0">
                <div class="card-header bg-warning text-center">
                    <p style="font-size: 24px;">Thêm yêu cầu hỗ trợ</p>
                </div>
                <div class="card-body" style="background-color: #f4f0f7;">
                    <form asp-action="Create">

                        <div class="form-group">
                            <label asp-for="CustomerId" class="control-label text-dark">Khách hàng</label>
                            <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                            <span asp-validation-for="CustomerId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="DepartmentId" class="control-label text-dark">Bộ phận</label>
                            <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="RequestDetails" class="control-label text-dark">Chi tiết yêu cầu</label>
                            <input asp-for="RequestDetails" class="form-control" />
                            <span asp-validation-for="RequestDetails" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Status" class="control-label text-dark">Trạng thái</label>
                            <input asp-for="Status" class="form-control" />
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CreatedAt" class="control-label text-dark">Ngày tạo</label>
                            <input asp-for="CreatedAt" class="form-control" />
                            <span asp-validation-for="CreatedAt" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ResolvedAt" class="control-label text-dark">Ngày giải quyết</label>
                            <input asp-for="ResolvedAt" class="form-control" />
                            <span asp-validation-for="ResolvedAt" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center">
                            <input type="submit" value="Tạo" class="btn btn-success text-white" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-outline-dark">Quay lại danh sách</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
